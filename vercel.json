{
  "buildCommand": "npm run build",
  "installCommand": "corepack enable && corepack use pnpm@10 && pnpm install --frozen-lockfile=false",
  "framework": "nextjs",
  "outputDirectory": "out",
  "trailingSlash": false,
  "cleanUrls": true,
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    }
  ]
}
