{
  "buildCommand": "npm run build",
  "installCommand": "corepack enable && corepack use pnpm@10 && pnpm install --frozen-lockfile=false",
  "framework": null,
  "outputDirectory": "out",
  "trailingSlash": false,
  "cleanUrls": true,
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/$1.html"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    }
  ]
}
